# Staging Environment Configuration

# Database Configuration
DATABASE_URL=postgres://postgres:password@postgres-staging:5432/niyama_staging?sslmode=require
DATABASE_HOST=postgres-staging
DATABASE_PORT=5432
DATABASE_NAME=niyama_staging
DATABASE_USER=postgres
DATABASE_PASSWORD=${DATABASE_PASSWORD}

# Redis Configuration
REDIS_URL=redis://redis-staging:6379
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Server Configuration
PORT=8000
GIN_MODE=release
ENVIRONMENT=staging

# Authentication Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# Clerk Configuration (Staging)
CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}
CLERK_WEBHOOK_SECRET=${CLERK_WEBHOOK_SECRET}

# AI Service Configuration
GEMINI_API_KEY=${GEMINI_API_KEY}
GEMINI_MODEL=gemini-pro
AI_CACHE_TTL=3600

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.niyama.dev
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200

# Security Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/certs/tls.crt
TLS_KEY_PATH=/etc/ssl/private/tls.key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_FEATURES=true
ENABLE_MONITORING=true