# Production Environment Configuration

# Database Configuration
DATABASE_URL=postgres://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:5432/${DATABASE_NAME}?sslmode=require
DATABASE_HOST=${DATABASE_HOST}
DATABASE_PORT=5432
DATABASE_NAME=niyama_production
DATABASE_USER=${DATABASE_USER}
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_MAX_CONNECTIONS=100
DATABASE_MAX_IDLE_CONNECTIONS=10

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_MAX_CONNECTIONS=100

# Server Configuration
PORT=8000
GIN_MODE=release
ENVIRONMENT=production

# Authentication Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# Clerk Configuration (Production)
CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
CLERK_SECRET_KEY=${CLERK_SECRET_KEY}
CLERK_WEBHOOK_SECRET=${CLERK_WEBHOOK_SECRET}

# AI Service Configuration
GEMINI_API_KEY=${GEMINI_API_KEY}
GEMINI_MODEL=gemini-pro
AI_CACHE_TTL=3600
AI_RATE_LIMIT_PER_MINUTE=1000

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
METRICS_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.niyama.dev,https://niyama.dev
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=500
RATE_LIMIT_BURST=100

# Security Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/certs/tls.crt
TLS_KEY_PATH=/etc/ssl/private/tls.key
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Performance Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
GZIP_ENABLED=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_FEATURES=true
ENABLE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# External Services
OPA_ENDPOINT=${OPA_ENDPOINT}
GATEKEEPER_ENABLED=true
KUBERNETES_CONFIG_PATH=/etc/kubernetes/config

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30