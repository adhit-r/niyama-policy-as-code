{
  "name": "niyama-frontend",
  "version": "1.0.0",
  "description": "Niyama Policy as Code Platform - Frontend",
  "type": "module",
  "scripts": {
    "dev": "bun run vite --port 3001 --host",
    "build": "bun run tsc && bun run vite build",
    "preview": "bun run vite preview",
    "test": "bun run vitest",
    "test:ui": "bun run vitest --ui",
    "test:coverage": "bun run vitest --coverage",
    "lint": "bun run eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "bun run eslint . --ext ts,tsx --fix",
    "type-check": "bun run tsc --noEmit"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.49.1",
    "@hookform/resolvers": "^3.3.2",
    "@monaco-editor/react": "^4.6.0",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.294.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^16.0.0",
    "react-intersection-observer": "^9.5.3",
    "react-markdown": "^9.0.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.20.1",
    "react-syntax-highlighter": "^15.5.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.31",
    "rollup-plugin-visualizer": "^6.0.4",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.3",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
