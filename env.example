# Database Configuration
DATABASE_URL=postgresql://niyama:password@localhost:5432/niyama
REDIS_URL=redis://localhost:6379

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro


# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# OPA Configuration
OPA_URL=http://localhost:8181
OPA_BUNDLE_URL=http://localhost:8181/v1/bundles/niyama

# Monitoring & Logging
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=niyama
INFLUXDB_BUCKET=niyama_metrics

ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Application Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=niyama-storage

# External Integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url
PAGERDUTY_API_KEY=your_pagerduty_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_MAPPING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS_COLLECTION=true

